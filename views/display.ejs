<html>
    <head>
        <meta charset="utf-8">
        <title>Pantaloons</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="dist/css/adminlte.min.css">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    </head>
    <body class="sidebar-mini" style="height: 900px;">
        <!-- Site wrapper -->
        <div class="wrapper">
            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                            <i class="fas fa-bars"></i>
                        </a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a href="/" class="nav-link">Home</a>
                    </li>
                  <!--  <li class="nav-item d-none d-sm-inline-block">
                        <center><h3>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Pantaloons Inventory Management | Sales Details</h3></center>
                    </li>-->
                </ul>
            </nav>
            <!-- /.navbar -->
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <!-- Brand Logo -->
                <a href="/" class="brand-link">
                    <img src="1392637501641.jpg" alt="Fashion Feet Logo" class="brand-image">
                    <span class="brand-text font-weight-light">Pantaloons</span>
                </a>
                <!-- Sidebar -->
                <div class="sidebar">
                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <li class="nav-item">
                                <a href="/add" class="nav-link">
                                    <i class="nav-icon far fa-circle text-warning"></i>
                                    <p class="text">Add Product</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/display" class="nav-link">
                                    <i class="nav-icon far fa-circle text-warning"></i>
                                    <p class="text">Sales Details</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/update" class="nav-link">
                                    <i class="nav-icon far fa-circle text-warning"></i>
                                    <p class="text">Update Sales</p>
                                </a>
                            </li>
							<li class="nav-item">
								<a href="/delete" class="nav-link">
								    <i class="nav-icon far fa-circle text-warning"></i>
									<p class="text">Delete Sales</p>
								</a>
							</li>
                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header"> 
                    <h1>Pantaloons Inventory Management | Sales Details</h1>
              <!--      <center><a href="/" ><img src="download1.png"></a></center>-->
                </section>  
                <!-- Main content -->
                <section class="content">
                    <!-- Default box -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Sales Details</h3>
                        </div>
                        <div class="card-body table-responsive p-0" style="height: auto;">
                            <table id="stock" class="table table-striped table-head-fixed text-nowrap">
                                <thead>
                                    <tr>
                                        <th style="width: 20%;">Purchase Date</th>
                                        <th style="width: 10%;">Product ID</th>
                                        <th style="width: 10%" >Unit Price</th>
                                        <th style="width: 10%" >Quantity</th>
                                        <th style="width: 10%" >Total Sales(in Rs)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var i=0;i<data.length;i++){%>
                                        <tr>
                                            <td><%=data[i].Date%></td>
                                            <td><%= data[i].Pid %></td>
                                            <td><%= data[i].SP %></td>
                                            <td><%= data[i].Quantity %></td>
                                            <td><%= data[i].SP * data[i].Quantity %></td>
                                        </tr>
                                        <%}%>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
             <!--       <div class="row">
                        <div class="col-12">
                          <a href="/update" class="btn btn-primary">Update Stock</a>
                        </div>
                      </div>
                    -->
                    <div class="row">
                        <div class="col-12">
                            <button class="btn btn-primary onclick="asp();"><i class="fa fa-download"></i> Generate Excel</button>
                            <button class="btn btn-primary float-right" onclick="window.print()"><i class="fa fa-print"></i> Print</button>
                            <button class="col-md-6 btn btn-primary float-right-middle" style="width: 150px;" onclick="window.print()"><i class="fa fa-download"></i> Generate PDF</button>
                        </div>
                      </div>
                    <!-- /.card -->
                </section>
                <!-- /.content -->
            </div>
            
            <!-- /.content-wrapper -->
            <footer class="main-footer">
                <div class="float-right d-none d-sm-block">
                    <b>Pantaloons Inventory Management</b>
                </div>
                <strong>COPYRIGHT &copy; ADITYA BIRLA FASHION & RETAIL LIMITED. ALL RIGHTS RESERVED. </strong>
            </footer>
        </div>
        <!-- ./wrapper -->
        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
        <script src="//cdn.rawgit.com/rainabba/jquery-table2excel/1.1.0/dist/jquery.table2excel.min.js"></script>
        <script>
            $(document).ready(function asp()  {
               $("#stock").table2excel({
                   filename: "Stock.xls"
               });
            });
           </script>
        <!-- jQuery -->
        <script src="../../plugins/jquery/jquery.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- AdminLTE App -->
        <script src="../../dist/js/adminlte.min.js"></script>
        <!-- AdminLTE for demo purposes -->
        <script src="../../dist/js/demo.js"></script>
    </body>
</html>