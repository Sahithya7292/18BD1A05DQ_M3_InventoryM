<html>
    <head>
        <meta charset="utf-8">
        <title>Pantaloons</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="dist/css/adminlte.min.css">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    </head>
    <body class="sidebar-mini" style="height: 900px;">
        <!-- Site wrapper -->
        <div class="wrapper">
            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                            <i class="fas fa-bars"></i>
                        </a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a href="/" class="nav-link">Home</a>
                    </li>
                </ul>
            </nav>
            <!-- /.navbar -->
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <!-- Brand Logo -->
                <a href="/" class="brand-link">
                    <img src="1392637501641.jpg" alt="Fashion Feet Logo" class="brand-image">
                    <span class="brand-text font-weight-light">Pantaloons</span>
                </a>
                <!-- Sidebar -->
                <div class="sidebar">
                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <li class="nav-item">
                                <a href="/add" class="nav-link">
                                    <i class="nav-icon far fa-circle text-warning"></i>
                                    <p class="text">Add Product</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/display" class="nav-link">
                                    <i class="nav-icon far fa-circle text-warning"></i>
                                    <p class="text">Sales Details</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/update" class="nav-link">
                                    <i class="nav-icon far fa-circle text-warning"></i>
                                    <p class="text">Update Sales</p>
                                </a>
                            </li>
							<li class="nav-item">
								<a href="/delete" class="nav-link">
								    <i class="nav-icon far fa-circle text-warning"></i>
									<p class="text">Delete Sales</p>
								</a>
							</li>
                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
         <!--       <section class="content-header"> -->
                    <center><a href="/" ><img src="download1.png"></a></center>
           <!--     </section>  -->
                <!-- Main content -->
                <section class="content">
                    <!-- Default box -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Stock Details</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body table-responsive p-0" style="height: 550px;">
                            <table class="table table-striped table-head-fixed text-nowrap">
                                <thead>
                                    <tr>
                                        <th style="width: 10%;">Product ID</th>
                                        <th style="width: 10%" >Brand</th>
                                        <th style="width: 10%" >Category</th>
                                        <th style="width: 10%" >Product Name</th>
                                        <th style="width: 10%" >Size</th>
                                        <th style="width: 10%" >Quantity</th>
                                        <th style="width: 10%" >Cost Price</th>
                                        <th style="width: 10%" >Selling Price</th>
                                        <th style="width: 20%" > </th>
										<th style="width: 20%" > </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var i=0;i<data.length;i++){%>
                                        <tr>
                                            <td><%= data[i].Pid %></td>
                                            <td><%= data[i].Brand %></td>
                                            <td><%= data[i].Category %></td>
                                            <td><%= data[i].Name %></td>
                                            <td><%= data[i].Size %></td>
                                            <td>
                                                
                                                <div class="progress progress-xs">                                                
                                                 <progress class="progress-bar bg-safe"  value="<%= data[i].Quantity %>" style=" width: 70px;" max="100"> </progress>
                                                </div>
                                                <small><%= data[i].Quantity %></small>
                                            </td>
                                            <td><%= data[i].CP %></td>
                                            <td><%= data[i].SP %></td>
                                            <td class="project-actions text-right">
												<form action="/u" method="POST">
													<input type="text" name="id" value="<%= data[i].Pid %>" hidden>
													<input type="text" name="brand" value="<%= data[i].Brand %>" hidden>
                                                    <input type="text" name="cat" value="<%= data[i].Category %>" hidden>
                                                    <input type="text" name="nm" value="<%= data[i].Name %>" hidden>
                                                    <input type="text" name="size" value="<%= data[i].Size %>" hidden>
                                                    <input type="text" name="qty" value="<%= data[i].Quantity %>" hidden>
                                                    <input type="text" name="cp" value="<%= data[i].CP %>" hidden>
                                                    <input type="text" name="sp" value="<%= data[i].SP %>" hidden>
													<button class="btn btn-info btn-sm" type="submit"><i class="fas fa-pencil-alt"></i>Edit</button>
												</form>
                                             	</td>
											<td class="project-actions text-right">
                                            <form action="/d" method="POST">
											<input type="text" name="pid" value="<%= data[i].Pid %>" hidden>
											<button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i>Delete</button>
											</form>   
											</td>
                                        </tr>
                                        <%}%>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </section>
                <!-- /.content -->
            </div>
            <!-- /.content-wrapper -->
            <footer class="main-footer">
                <div class="float-right d-none d-sm-block">
                    <b>Pantaloons Inventory Management</b>
                </div>
                <strong>COPYRIGHT &copy; ADITYA BIRLA FASHION & RETAIL LIMITED. ALL RIGHTS RESERVED. </strong>
            </footer>
        </div>
        <!-- ./wrapper -->
        <!-- jQuery -->
        <script src="../../plugins/jquery/jquery.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- AdminLTE App -->
        <script src="../../dist/js/adminlte.min.js"></script>
        <!-- AdminLTE for demo purposes -->
        <script src="../../dist/js/demo.js"></script>
    </body>
</html>