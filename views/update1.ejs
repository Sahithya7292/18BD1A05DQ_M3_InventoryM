                <!-- Content Header (Page header) -->
                <section class="content-header"> 
                  <h1>Pantaloons Inventory Management | Update Stock Details</h1>
                   <!-- <center><a href="/" ><img src="download1.png"></a></center>-->
                </section>  
                <!-- Main content -->
               
                <section class="content">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Stock</h3>
                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <% var pid=data[0];   var br=data[1];  
                                       var cat=data[2];   var nm=data[3];
                                       var sz=data[4];    var qty=data[5];
                                       var c=data[6];     var s=data[7]%>
                                    <form action="/pu1" method="POST">
                                        <div class="form-group">
                                            <label for="inputName">Product Id:&nbsp;<%=pid%></label>
                                            <input type="text" name="id" value="<%=pid%>" hidden>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputName">Product Brand:&nbsp;<%=br%></label>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputName">Product Category:&nbsp;<%=cat%></label>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputName">Product Name:&nbsp;<%=nm%></label>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputName">Old Stock:&nbsp;<%=qty%></label>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputName">New Stock:</label>
                                            <input type="number" id="inputName" class="form-control" placeholder="Quantity" name="Quantity" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputName">Old Cost Price:&nbsp;<%=c%></label>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputName">New Cost Price:</label>
                                            <input type="number" id="inputName" class="form-control" placeholder="Cost Price" name="CP" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputName">Old Selling Price:&nbsp;<%=s%></label>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputName">New Selling Price:</label>
                                            <input type="number" id="inputName" class="form-control" placeholder="Selling Price" name="SP" required>
                                        </div>
                                        <div class="row">
                                            <div class="col-12">
                                              <a href="/" class="btn btn-secondary">Cancel</a>
                                              <input type="submit" value="Update Stock" class="btn btn-success float-right">
                                            </div>
                                          </div>
                                    </form>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                        </div>
                    </div>
                </section>

                <!-- /.content -->
